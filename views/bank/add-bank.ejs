<%- include('../layouts/main-layout.ejs') %>

<main>
    <div class="container">
        <div class="row">
            <form action="/bank/add-bank" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="bankName" class="form-label">Bank Name</label>
                    <input type="text" class="form-control" id="bankName" name="bankName" aria-describedby="bankName">
                </div>
                <div class="mb-3">
                    <label for="bankImage" class="form-label">Bank Image</label>
                    <input type="file" class="form-control" id="bankImage" name="bankImage">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>

  
        
</main>

