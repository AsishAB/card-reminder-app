<%- include('../layouts/main-layout.ejs') %>
<style>
/* Custom style to prevent carousel from being distorted 
   if for some reason image doesn't load */
.carousel-item{
    min-height: 280px;
}
</style>
 <div class="container py-4">
    
    <div class="p-5 mb-4 bg-light rounded-3">
      <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">Manage Your Cards</h1>
        <p class="col-md-8 fs-4">
            Use the app to manage all your cards.
            You can store all the details in a secured environemt and you can export the data to an Excel Sheet
        </p>
        <% if (!isAuthenticated) { %>
        <div class="row text-center">
          <div class="col-md-12">
            <a href="/users/login" class="btn btn-white border border-dark" >Login Now</a>
          </div>
          <div class="col-md-12 mt-3">
            <a href="/users/register" class="btn btn-white border border-dark" >Dont have an account? Create one Now</a>
          </div>
        </div>
        <% } %>


      </div>
    </div>

    <div class="row align-items-md-stretch">
      <div class="col-md-6">
        <div class="h-100 p-5 text-white bg-dark rounded-3">
          <h2>See Your Cards in One Place</h2>
          <p>
            Whether it's a Debit Card or a Credit Card, you don't need to remember the full number Expiry Date
          </p>
          <button class="btn btn-outline-light" type="button" style="display: none;">Example button</button>
        </div>
      </div>
      <div class="col-md-6">
        <div class="h-100 p-5 bg-light border rounded-3">
          <h2>Also, Save your Bank Account Details</h2>
          <p>
            You can also store your bank account details like Account Number, IFSC Codes, Internet banking details, so, you no longer need to remember it.
          </p>
          
        </div>
      </div>
    </div>

  </div>
<div class="container-lg my-3">
    <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
        <!-- Carousel indicators -->
        <ol class="carousel-indicators" >
            <li data-bs-target="#myCarousel" data-bs-slide-to="0" class="active" style="background-color: black;"></li>
            <li data-bs-target="#myCarousel" data-bs-slide-to="1" style="background-color: black;"></li>
            <li data-bs-target="#myCarousel" data-bs-slide-to="2" style="background-color: black;"></li>
            <li data-bs-target="#myCarousel" data-bs-slide-to="3" style="background-color: black;"></li>
        </ol>
        
        <!-- Wrapper for carousel items -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/assets/index_carousal/rupay.png" class="d-block w-100" alt="Slide 1" height="200px">
            </div>
            <div class="carousel-item">
                <img src="/assets/index_carousal/visa.png" class="d-block w-100" alt="Slide 2" height="200px">
            </div>
            <div class="carousel-item">
                <img src="/assets/index_carousal/mastercard.png" class="d-block w-100" alt="Slide 3" height="200px"> 
            </div>
            <div class="carousel-item">
                <img src="/assets/index_carousal/amex.png" class="d-block w-100" alt="Slide 4" height="200px">
            </div>
        </div>

        <!-- Carousel controls -->
        <a class="carousel-control-prev" href="#myCarousel" data-bs-slide="prev" >
            <span class="carousel-control-prev-icon" ></span >
        </a>
        <a class="carousel-control-next" href="#myCarousel" data-bs-slide="next" >
            <span class="carousel-control-next-icon" ></span>
        </a>
    </div>
</div>

<%- include('../layouts/footer.ejs') %>
<%- include('../layouts/end-tag.ejs') %>